<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane maxHeight="800.0" maxWidth="800.0" minHeight="800.0" minWidth="800.0" prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.LoginController">
   <children>
      <VBox alignment="TOP_CENTER" maxHeight="800.0" maxWidth="800.0" minHeight="800.0" minWidth="800.0" prefHeight="200.0" prefWidth="800.0" spacing="10.0">
         <children>
            <ImageView fx:id="image" fitHeight="300.0" fitWidth="800.0" pickOnBounds="true" smooth="false">
               <image>
                  <Image url="@../../data/images/banner.jpg" />
               </image>
               <viewport>
                  <Rectangle2D />
               </viewport></ImageView>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <HBox alignment="CENTER" maxHeight="50.0" maxWidth="400.0" minHeight="50.0" minWidth="400.0" prefHeight="50.0" prefWidth="400.0" spacing="10.0">
                     <children>
                        <Label text="Username:" />
                        <TextField fx:id="username" maxWidth="250.0" minWidth="250.0" prefWidth="250.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" maxHeight="50.0" maxWidth="400.0" minHeight="50.0" minWidth="400.0" prefHeight="50.0" prefWidth="400.0" spacing="10.0">
                     <children>
                        <Label text="Passphrase:" />
                        <TextField fx:id="password" maxWidth="250.0" minWidth="250.0" prefWidth="250.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <Label fx:id="error" text="Incorrect credentials" textFill="RED" visible="false" />
            <Button fx:id="login" maxHeight="30.0" maxWidth="100.0" minHeight="30.0" minWidth="100.0" mnemonicParsing="false" onAction="#login" prefHeight="30.0" prefWidth="100.0" text="Login" />
         </children>
      </VBox>
   </children>
</AnchorPane>
